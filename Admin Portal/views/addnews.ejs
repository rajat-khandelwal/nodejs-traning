<%- include('./Header'); %>
  <div class="container" style="padding-top: 2%;">
    <h3 class="center" style="text-align: center;">Add News</h3>
    <form method="post" accept="/news/add-news">
      <div class="form-group row" style="padding-top: 3%;">
        <label for="inputEmail3" class="col-sm-2 col-form-label">News Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="title" id="inputEmail3" value="<%=data.title%>"
            placeholder="news title" required>
        </div>
      </div>
      <input type="hidden" name="id" value="<%=data._id%>">
      <div class="form-group row" style="padding-top: 3%">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Descriptions</label>
        <div class="col-sm-10">
          <textarea type="text" class="form-control" name="description" id="inputPassword3"
            placeholder="add descriptions" required>
          <%=data.description%>
        </textarea>
        </div>
      </div>

      <div class="form-group row" style="padding-top: 3%">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Image Url </label>
        <div class="col-sm-10">
          <input type="url" class="form-control" value="<%=data.imageurl%>" name="imageurl" id="imageurl" placeholder="add image url" required>
        </div>
      </div>

      <div class="form-group row" style="padding-top: 3%">
        <label for="inputPassword3" class="col-sm-2 col-form-label">DateTime</label>
        <div class="col-sm-10">
          <input type="datetime-local" class="form-control" name="createdDate" readonly value="<%=data.createdDate%>"
            id="createddate" placeholder="add descriptions">

        </div>
      </div>

      <div class="form-group row center" style="padding-top: 3%">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-success">Add News</button>
        </div>
      </div>
    </form>

  </div>


  <script>
    $(document).ready(function () {

      var createddate = "#createddate";

      var currdate = new Date($.now());

     

      var value = currdate.toISOString().split(".")[0];
      $(createddate).attr("value", value);

    })



  </script>
  <%- include('./Footer'); %>